{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription:</h1>

    {{ form_start(form) }}

    {# row permet de rajouter des options au élément du formulaire #}
    {#{{ form_widget(form) }}#}
    {{ form_row(form.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
    {{ form_row(form.email, {'attr': {'placeholder': 'Adresse email'}}) }}
    {{ form_row(form.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'attr': {'placeholder': 'Confirmer le mot de passe'}}) }}
    
    <button type="submit" class="btn btn-success">Inscription</button>
    
    
    {{ form_end(form) }}


{% endblock %}








